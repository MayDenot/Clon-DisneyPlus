---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
---

<Layout title="Mi lista | Disney+">
  <Header />
  <section class="w-full min-h-[80vh]">
    <div id="watchlist-container" class="min-h-[80vh] flex justify-center items-center">
      <div id="watchlist" class="flex flex-col items-center text-white text-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-circle-plus" 
            width="140" height="140" viewBox="0 0 24 24" stroke-width="1" stroke="#4f525f" 
            fill="transparent" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0"></path>
            <path d="M9 12h6"></path>
            <path d="M12 9v6"></path>
          </svg>
        <h2 class="text-xl my-[20px]">Mi lista está vacía.</h2>
        <p class="text-[12px]">El contenido que agregues aparecerá aquí.</p>
      </div>
    </div>
  </section>
  <Footer />
</Layout>
